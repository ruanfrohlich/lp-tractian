html
  scroll-behavior smooth

body
  &.is-open
    +below($md-max)
      overflow hidden

  &::-webkit-scrollbar
    width 8px

  &::-webkit-scrollbar-thumb
    background $color-primary

input[type=number]
  -moz-appearance textfield

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
  -webkit-appearance none
  margin 0

p
  font-family $font-family-base
  font-size 18px
  font-weight $font-weight-normal
  line-height 1.5

.site-main
  position relative
  // max-width $max-width
  margin 0 auto
  overflow hidden

.wrapper
  max-width $wrapper-width
  padding-right $gutter
  padding-left $gutter
  margin 0 auto

  +above($lg)
    --gutter $gutter
    padding-right calc(var(--gutter) * 2)
    padding-left calc(var(--gutter) * 2)

.sr-only
  position absolute
  width 1px
  height 1px
  padding 0
  margin -1px
  overflow hidden
  clip rect(0, 0, 0, 0)
  clip-path insert(50%)
  white-space nowrap
  border 0
