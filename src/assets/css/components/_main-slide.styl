.main-slide 
  position relative
  display flex
  flex-direction column
  align-items flex-start
  overflow hidden
  border-radius .75rem
  row-gap 40px
  
  +above($lg)
    flex-direction row

  .slide 
    position relative
    flex 0 0 auto
    width 100%
    aspect-ratio 1
    z-index 0

    +above($lg)
      padding-right 15px
      padding-left 15px   

    &__content 
      position absolute
      bottom 0
      left 0
      padding 10px

      +above($md)
        padding 20px 38px

    &__title 
      font-size clamp(18px, 4.7vw, 26px)
      font-weight $font-weight-normal
      margin-bottom 20px
      color $white

    &__description p
      font-size clamp(12px, 3vw, 16px)
      color $white

    &__image
      position relative
      width 100%
      height 100%
      border-radius .75rem
      box-shadow 0 10px 15px -3px rgba(0,0,0,.1), 0 4px 6px -4px rgba(0,0,0,.1);
      overflow hidden  
      z-index -1

      &:after 
        content ''
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        background linear-gradient(to bottom, rgba($black, 0) 10%, rgba($black, 1))

        +above($lg)
          background linear-gradient(to bottom, rgba($black, 0) 52%, rgba($black, 1))

    &__img 
      width 100%
      height 100%
      object-fit cover      
      object-position 50% 5%
