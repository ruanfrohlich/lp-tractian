.site-header
  position fixed
  top 0
  left 0
  width 100%
  background rgba($color-primary, 0)
  transition: 
    background 250ms ease-in-out,
    box-shadow 300ms ease-in-out
  z-index $zindex-fixed

  &.is-scroll
    box-shadow 0 0 10px 0 rgba(0,0,0,.3)
    background rgba($color-primary, 1)

  .menu-toggle
    position relative
    display flex
    flex-direction column
    row-gap 6px
    border none
    padding 0
    background none
    min-height 18px
    z-index $zindex-fixed

    +above($md)
      display none

    span
      display inline-block
      width 20px
      height 2px
      background-color $white
      border-radius 3px

    &.is-open span      
      transition 300ms ease

      &:nth-child(2)
        display none

      &:first-child
        transform translateY(4px) rotate(45deg)

      &:last-child
        transform translateY(-4px) rotate(-45deg)

  .wrapper 
    padding-top 30px
    padding-bottom 30px

  .toggle-icon
    position relative
    display flex
    flex-direction column
    row-gap 6px
    border none
    padding 0
    background none
    min-height 18px
    z-index $zindex-fixed

    +above($md)
      display none

    span
      display inline-block
      width 20px
      height 2px
      background-color $color-secondary
      border-radius 3px
      transition 250ms ease-in-out

    &.is-open
      span:nth-child(2)
        display none

      span:first-child
        transform translateY(4px) rotate(45deg)

      span:last-child
        transform translateY(-4px) rotate(-45deg)

  .main-nav
    display flex
    justify-content space-between
    align-items center

    &__brand
      width 166px
      height 22px

      img  
        width 100%
        height 100%
        object-fit contain

  .main-menu
    position fixed
    top 0
    left 0
    display flex
    flex-direction column
    place-content center
    place-items center
    transition 300ms ease-in-out
    gap 32px

    +below($sm-max)
      width 100%
      height 100%
      background-color $color-gray-900
      transform translateX(100%)

      &.is-open
        transform translateX(0)

    +above($md)
      position relative
      flex-direction row
      align-items flex-start

    &__link a
      position relative
      color $white
      padding-bottom 5px

      &:after
        content ''
        position absolute
        left 50%
        bottom 0
        transform-origin center center
        transform translateX(-50%) scaleX(0)
        width 80%
        height 2px
        background-color currentColor
        border-radius 30px
        transition 200ms ease-in-out

      &:hover:after
      &.is-active:after
        transform translateX(-50%) scaleX(1)
