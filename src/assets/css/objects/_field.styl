.field
  position relative
  display flex
  flex-direction column
  column-gap 20px
  flex 1
  align-items flex-start

  .field
    &-label
      color $white
      font-size 12px
      transition color 250ms ease-in-out
      margin-bottom 10px
      order -1

      +above($md)
        font-size 18px

    &-control
      flex 1
      width 100%
      padding 6px 12px
      border none
      max-height 34px
      color $black
      font-family $font-family-base
      font-size 14px
      background-color #e7e7e7
      font-weight $font-weight-normal
      border-radius 6px
      transition box-shadow 250ms ease-in-out
      -webkit-appearance none
      appearance none

      +above($md)
        font-size 16px
        max-width 444px

      &:focus
        box-shadow inset 0 0 0 2px $color-gray-900

      &:is(select)
        position relative
        appearance none
        padding-right 60px
        font-size 16px
        background-repeat no-repeat
        // background-image embedurl('../img/icons/select-arrow.svg')
        background-position calc(100% - 12px) 50%
        background-size 22px 12px

      &:is(textarea)
        min-height 80px
        max-width 730px
        resize none

        +above($md)
          min-height 175px

      &[type="file"]
        position absolute
        bottom 0
        opacity 0
